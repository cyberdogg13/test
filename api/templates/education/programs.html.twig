{% extends "base.html.twig" %}

{% block content %}

        <section class="row">
            <div class="col-xl-9 col-xl-offset-3 col-lg-8 col-lg-offset-4 col-md-9 col-md-offset-3 col-xs-12">
                <header class="content__header">
                    <h1 class="content__header-title">{{ 'programs'|trans|capitalize }}</h1>
                </header>
            </div>
        </section>

        <article>
            <div class="row">
                <aside class="col-xl-3 col-lg-4 col-md-3 col-sm-modal">
                    <nav class="sidenav">
                        <ul>
                            <li class="sidenav__item sidenav__item--active">
                                <a href="{{ path('app_education_programs') }}">
                                    Introductie
                                </a>
                            </li>
                            {% for program in resources %}
                            <li class="sidenav__item">
                                <a href="{{ path('app_education_program', {id: program.id}) }}">
                                    {{ program.name|capitalize }}
                                </a>
                            </li>
                            {% endfor %}
                        </ul>
                    </nav>
                </aside>

                <div class="col-xl-9 col-lg-8 col-md-9">
                    <div class="content-background">
                        <div class="skiplink-target content" id="main-content">

                            <p>Hier komt een introductie over de programs.</p>

                        </div>
                    </div>
                </div>
            </div>
        </article>

{% endblock %}
