            option.id = i;
            option.value = i + '-' + currentYear;
            option.innerHTML = 'week: ' + i + ' - ' +  currentYear;
            select.appendChild(option);
        }

    }


    let days = document.getElementsByClassName('days');
    for(let i = 0; i < days.length; i++){
        for(let j = 0; j < 7; j++){

